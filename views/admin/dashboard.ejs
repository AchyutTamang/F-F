<div class="min-h-screen bg-gray-50">
  <div class="container mx-auto px-4 py-6">
    
     




    <!-- Main Content Layout -->
    <div class="lg:flex gap-8">
      <!-- Improved Sidebar with active states -->
      <div class="lg:w-1/4 mb-6 lg:mb-0">
        <div
          class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden"
        >
          <div class="p-4 border-b border-gray-100">
            <h2 class="text-lg font-semibold text-gray-900">Admin Menu</h2>
          </div>
          <nav class="p-4">
            
            <a
              href="/admin/dashboard"
              class="flex items-center px-4 py-3 rounded-lg mb-2 text-gray-900 font-medium hover:bg-primary/10 hover:text-primary transition-colors <%= path === '/admin/dashboard' ? 'bg-primary/10 text-primary' : '' %>"
            >
              <svg
                class="w-5 h-5 mr-3"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"
                />
              </svg>
              Menu Items
            </a>
            <a
              href="/admin/dashboard/merch"
              class="flex items-center px-4 py-3 rounded-lg mb-2 text-gray-900 font-medium hover:bg-primary/10 hover:text-primary transition-colors <%= path === '/admin/dashboard/merch' ? 'bg-primary/10 text-primary' : '' %>"
            >
              <i class="fa-solid fa-shirt w-5 h-5 mr-3"></i>
              Merchandise
            </a>
            <a
              href="/admin/dashboard/category"
              class="flex items-center px-4 py-3 rounded-lg mb-2 text-gray-900 font-medium hover:bg-primary/10 hover:text-primary transition-colors <%= path === '/admin/dashboard/category' ? 'bg-primary/10 text-primary' : '' %>"
            >
      <i class="fa-solid fa-list w-5 h-5 mr-3"></i>
              Categories
            </a>
            <a
              href="/admin/logout"
              class="flex items-center px-4 py-3 rounded-lg text-gray-900 font-medium hover:bg-primary/10 hover:text-primary transition-colors <%= path === '/admin/settings' ? 'bg-primary/10 text-primary' : '' %>"
            >
              
              <i class="fa-solid fa-arrow-right-from-bracket w-5 h-5 mr-3"></i>
              Logout
            </a>
          </nav>
        </div>
      </div>

      <div class="lg:w-3/4">
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
          
          <div class="flex flex-wrap gap-4 mb-8">
            <a
              href="/admin/items/new"
              class="inline-flex items-center px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors"
            >
              <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 4v16m8-8H4"
                />
              </svg>
              Add Food Item
            </a>
            <a
              href="/admin/items/merch/new"
              class="inline-flex items-center px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors"
            >
              <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 4v16m8-8H4"
                />
              </svg>
              Add Merch
            </a>
            <a
              href="/admin/items/category/new"
              class="inline-flex items-center px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors"
            >
              <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 4v16m8-8H4"
                />
              </svg>
              Add Category
            </a>
          </div>
 <% if(!isCategory){ %>
          <!-- Filter Section -->
          <div class="mb-6 p-4 bg-gray-50 rounded-lg">
            <form id="filterForm" class="space-y-4">
              <% if(items[0].category == "merch"){ %>
                <div class="grid grid-cols-1 md:grid-cols-1 gap-4" >

              <% }else{ %>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4" >
                <% } %>
                <!-- Search Filter -->
                <div >
                  <label for="search" class="block text-sm font-medium text-gray-700 mb-1">Search</label>
                  <input
                    type="text"
                    id="search"
                    name="search"
                    placeholder="Search items by name..."
                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-primary"
                  >
                </div>
                <% if(items[0].category == "merch"){ %>

                <% }else{ %>
                <!-- Category Filter -->
                <div>
                  <label for="category" class="block text-sm font-medium text-gray-700 mb-1">Category</label>
                  <select
                    id="category"
                    name="category"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-primary"
                  >
                    
                  </select>
                </div>
                
                <% } %>
                
              </div>
              
              <!-- Filter Button -->
              <div class="flex justify-end">
                <button
                  type="submit"
                  class="px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors"
                >
                  Apply Filters
                </button>
              </div>
            </form>
          </div>
          <% } %>
          <% if(isCategory){ %>
            <ul class="space-y-2 mt-4">
              <% items.forEach(item => { %>
                <li class="flex items-center justify-between bg-white rounded-lg shadow-sm p-3 hover:bg-gray-50 transition-colors">
                  <a class="text-gray-700 hover:text-blue-600 font-medium"><%= item.name %></a>
                  <button 
                    onclick="deleteCategory('<%= item._id %>')"
                    class="text-red-500 hover:text-red-700 focus:outline-none"
                    title="Delete category"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                  </button>
                </li>
              <% }) %>
            </ul>
          <% }else{ %>
          <!-- Grid Layout for Items -->
          <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
            <% items.forEach(item => { %>
            <div class="bg-white rounded-lg shadow-md p-4">
              <img
                src="<%= item.image %>"
                alt="<%= item.name %>"
                class="w-full h-48 object-cover rounded"
              />
              <h2 class="text-xl font-semibold mt-2"><%= item.name %></h2>
              <p class="text-gray-600"><%= item.description %></p>
              <p class="text-lg font-bold mt-2">Rs. <%= item.price %></p>
              <div class="flex justify-end mt-4 space-x-2">
                <a
                  href="/admin/items/<%= item._id %>/edit/<%= item.category %>/"
                  class="bg-yellow-500 text-white px-3 py-1 rounded"
                >
                  Edit
                </a>
                <% if (item.category == "merch") { %>
                <button
                  onclick="deleteMerch('<%= item._id %>')"
                  class="bg-red-500 text-white px-3 py-1 rounded"
                >
                <% } else { %>
                <button
                  onclick="deleteItem('<%= item._id %>')"
                  class="bg-red-500 text-white px-3 py-1 rounded"
                >
                <% } %>
                  Delete
                </button>
              </div>
            </div>
            <% }) %>
          </div>
          <% } %>
          
         
          
          
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    loadCategories();
  });
  document.getElementById('filterForm').addEventListener('submit', function(e) {
    e.preventDefault();
    const formData = new FormData(this);
    const params = new URLSearchParams();
    
    for (const [key, value] of formData.entries()) {
      if (value) params.append(key, value);
    }
    
    window.location.href = `/admin/dashboard?${params.toString()}`;
  });
   // Fetch categories when page loads
  async function loadCategories() {
    try {
      const response = await fetch("/menu/getCategories");
      const categories = await response.json();

      const categorySelect = document.getElementById("category");

      // Keep the "All Categories" option and add fetched categories
      categorySelect.innerHTML = `
                          <option value="">All Categories</option>

            ${categories
              .map(
                (category) => `
                <option value="${category.value}" 
                    ${category.value}>
                    ${category.label}
                </option>
            `
              )
              .join("")}
        `;
    } catch (error) {
      console.error("Error loading categories:", error);
    }
  }
  function showToast(message) {
    const toast = document.createElement("div");
    toast.className =
      "fixed bottom-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg transform translate-y-0 opacity-100 transition-all duration-300 z-50 flex items-center";

    // Add success icon
    const icon = document.createElement("span");
    icon.className = "mr-2";
    icon.innerHTML = `
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
      </svg>
    `;
    toast.appendChild(icon);

    // Add message
    const text = document.createElement("span");
    text.textContent = message;
    toast.appendChild(text);

    document.body.appendChild(toast);

    setTimeout(() => {
      toast.classList.add("opacity-0", "translate-y-2");
      setTimeout(() => toast.remove(), 300);
    }, 3000);
  }

  async function deleteItem(id) {
    if (confirm("Are you sure you want to delete this item?")) {
      try {
        const response = await fetch(`/admin/items/${id}`, {
          method: "DELETE",

        });
        if (response.status === 200) {
          showToast("Item deleted successfully");
setTimeout(() => {
  window.location.reload();
}, 3000);        }
      } catch (error) {
        console.error("Error:", error);
        showToast("Error deleting item");
      }
    }
  }
  async function deleteMerch(id) {
    if (confirm("Are you sure you want to delete this itmerchem?")) {
      try {
        const response = await fetch(`/admin/merch/${id}`, {
          method: "DELETE",
        });
        if (response.status === 200) {
          showToast("Merch deleted successfully");
setTimeout(() => {
  window.location.reload();
}, 3000);
        }
      } catch (error) {
        console.error("Error:", error);
        showToast("Error deleting merch");
      }
    }
  }
  async function deleteCategory(id) {
    if (confirm("Are you sure you want to delete this category?")) {
      try {
        const response = await fetch(`/admin/category/${id}`, {
          method: "DELETE",
        });
        if (response.status === 200) {
          showToast("Category deleted successfully");
setTimeout(() => {
  window.location.reload();
}, 3000);
        }
      } catch (error) {
        console.error("Error:", error);
        showToast("Error deleting category");
      }
    }
  }
</script>
